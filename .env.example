# Trading Bot ML - Variáveis de Ambiente
# Copie este arquivo para .env e configure suas variáveis

# ===============================
# CONFIGURAÇÕES DA API
# ===============================

# Porta da aplicação (Render define automaticamente)
PORT=8000

# Ambiente (development/production)
ENVIRONMENT=production

# URL do Redis (opcional - para cache)
REDIS_URL=redis://localhost:6379

# ===============================
# CONFIGURAÇÕES DE MACHINE LEARNING
# ===============================

# Número de workers para treinamento paralelo
ML_WORKERS=2

# Tamanho do histórico para treinamento
ML_HISTORY_SIZE=1000

# Intervalo de retreinamento (em horas)
ML_RETRAIN_INTERVAL=24

# Confidence threshold mínimo
ML_MIN_CONFIDENCE=60

# ===============================
# CONFIGURAÇÕES DE TRADING
# ===============================

# Configurações padrão do Deriv
DERIV_APP_ID=1089
DERIV_WS_URL=wss://ws.derivws.com/websockets/v3

# Símbolos suportados (separados por vírgula)
SUPPORTED_SYMBOLS=R_10,R_25,R_50,R_75,R_100,1HZ10V,1HZ25V,1HZ50V,1HZ100V

# Limites de stake
MIN_STAKE=0.35
MAX_STAKE=2000

# ===============================
# CONFIGURAÇÕES DE SEGURANÇA
# ===============================

# Chave secreta para API (gere uma aleatória)
SECRET_KEY=your-secret-key-here

# CORS Origins (URLs permitidas)
CORS_ORIGINS=http://localhost:3000,https://your-frontend.onrender.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ===============================
# CONFIGURAÇÕES DE LOG
# ===============================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=/app/logs/trading_bot.log

# Rotação de logs (dias)
LOG_RETENTION_DAYS=7

# ===============================
# CONFIGURAÇÕES DE DADOS
# ===============================

# URL para dados de mercado externos (opcional)
EXTERNAL_DATA_URL=

# API Keys para provedores de dados (opcional)
ALPHA_VANTAGE_KEY=
TWELVE_DATA_KEY=

# ===============================
# CONFIGURAÇÕES DE NOTIFICAÇÃO
# ===============================

# Webhook para notificações (opcional)
WEBHOOK_URL=

# Telegram Bot (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===============================
# CONFIGURAÇÕES DE BACKUP
# ===============================

# URL do S3 para backup de modelos (opcional)
S3_BUCKET_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ===============================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===============================

# Sentry DSN para monitoramento de erros (opcional)
SENTRY_DSN=

# New Relic License Key (opcional)
NEW_RELIC_LICENSE_KEY=